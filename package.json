{
  "name": "skyway-sdk",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "build:example": "pnpm run build && lerna run build:example",
    "clean": "pnpm run clean:example && lerna clean -y && rm -rf ./packages/*/dist && rm -rf ./packages/*/node_modules && rm -rf ./packages/*/bundler && rm -rf node_modules",
    "clean:example": "rm -rf ./examples/*/dist && rm -rf ./examples/*/node_modules",
    "type": "lerna run type",
    "compile": "lerna run compile && lerna run type",
    "doc": "pnpm run compile && pnpm run doc:update",
    "doc:update": "lerna run doc && zx ./scripts/update-api-reference.mjs && zx ./scripts/insert-gtm-script.mjs",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "graph": "lerna run graph",
    "playground": "cd examples/playground && pnpm run dev",
    "playground-room": "cd examples/playground-room && pnpm run dev",
    "test": "pnpm run compile && zx ./scripts/test.mjs",
    "test:no-compile": "zx ./scripts/test.mjs",
    "test:sfu": "pnpm run compile && zx ./scripts/test-sfu.mjs",
    "test:sfu-no-compile": "zx ./scripts/test-sfu.mjs",
    "test:p2p": "pnpm run compile && zx ./scripts/test-p2p.mjs",
    "test:p2p-no-compile": "zx ./scripts/test-p2p.mjs",
    "watch": "lerna run watch",
    "upgrade-interactive": "pnpm dlx npm-check --update",
    "first": "pnpm i && pnpm run compile",
    "update-mirror": "zx scripts/update-mirror-repo.mjs",
    "changeset": "changeset",
    "changeset:version": "changeset version && pnpm i",
    "changeset:version:ci": "pnpm run changeset:version && pnpm run doc && pnpm run build",
    "changeset:publish": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@types/jasmine": "^4.3.0",
    "@types/jasmine-ajax": "^3.3.5",
    "@types/jest": "^29.5.13",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "@vitest/browser": "^3.0.5",
    "esbuild": "^0.25.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-deprecation": "^1.3.3",
    "eslint-plugin-jest": "^24.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "jasmine-ajax": "^4.0.0",
    "jasmine-core": "^4.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^8.2.2",
    "npm-run-all": "^4.1.5",
    "organize-imports-cli": "^0.10.0",
    "playwright": "^1.50.1",
    "prettier": "^2.4.1",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.25.0",
    "typedoc-plugin-markdown": "3.17.1",
    "typedoc-plugin-zod": "^1.3.1",
    "typescript": "4.7.4",
    "vitest": "^3.0.5",
    "zx": "^8.4.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.8.1"
  },
  "packageManager": "pnpm@10.5.2+sha512.da9dc28cd3ff40d0592188235ab25d3202add8a207afbedc682220e4a0029ffbff4562102b9e6e46b4e3f9e8bd53e6d05de48544b0c57d4b0179e22c76d1199b"
}
